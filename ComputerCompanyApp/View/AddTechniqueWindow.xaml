<Window x:Class="ComputerCompanyApp.View.AddTechniqueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerCompanyApp.View"
        mc:Ignorable="d"
        Title="AddTechniqueWindow" Height="700" Width="1080" Background="#FF292829" WindowStartupLocation="CenterScreen" Loaded="AddTechnique_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="dg_Component" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,10"/>
        <Label Grid.Column="2" Content="Добавить технику" FontSize="32" Foreground="White" FontFamily="Bahnschrift" Height="48" VerticalAlignment="Center" HorizontalAlignment="Left" Width="308" Margin="50,0,0,0"/>
        <TextBox Name="tb_name" FontSize="18" FontFamily="Bahnschrift Light" Grid.Row="1" Grid.Column="2" Margin="50,122,50,228" Height="50" Width="300"/>
        <TextBox Name="tb_price" FontSize="18" FontFamily="Bahnschrift Light" Grid.Row="1" Grid.Column="2" Margin="50,225,50,125" Height="50" Width="300"/>
        <TextBox x:Name="tb_amount" FontSize="18" FontFamily="Bahnschrift Light" Grid.Row="1" Grid.Column="2" Margin="50,316,50,34" Height="50" Width="300"/>
        <Label Grid.Column="2" Content="Название" FontSize="24" Foreground="White" FontFamily="Bahnschrift" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="308" Margin="50,83,0,0" Grid.Row="1"/>
        <Label Grid.Column="2" Content="Цена" FontSize="24" Foreground="White" FontFamily="Bahnschrift" Height="43" VerticalAlignment="Top" HorizontalAlignment="Left" Width="308" Margin="50,177,0,0" Grid.Row="1"/>
        <Label Grid.Column="2" Content="Количество" FontSize="24" Foreground="White" FontFamily="Bahnschrift" Height="38" VerticalAlignment="Top" HorizontalAlignment="Center" Width="308" Margin="0,278,0,0" Grid.Row="1"/>


        <Button Grid.Column="2" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="220" Height="50" Content="Собрать" FontFamily="Bahnschrift" Name="bt_assembling" FontSize="20" Background="#FFA377D0" Foreground="White" Margin="0,10,0,0"/>

    </Grid>
</Window>
